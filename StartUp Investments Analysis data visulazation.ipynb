import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

CLEANED_DATA_PATH = 'cleaned_investments.csv'
TOP_N = 10

sns.set_style('whitegrid')
plt.rcParams['figure.figsize'] = (12, 7)
plt.rcParams['font.size'] = 12


def load_data(path):
    try:
        df = pd.read_csv(path)
        if 'first_funding_year' in df:
            df['first_funding_year'] = pd.to_numeric(df['first_funding_year'], errors='coerce').fillna(0).astype(int)
        if 'funding_total_usd' in df:
            df['funding_total_usd'] = pd.to_numeric(df['funding_total_usd'], errors='coerce').fillna(0)
        if 'funding_rounds' in df:
            df['funding_rounds'] = pd.to_numeric(df['funding_rounds'], errors='coerce').fillna(0).astype(int)
        return df
    except FileNotFoundError:
        print(f"ERROR: File not found at {path}")
    except Exception as e:
        print(f"ERROR loading data: {e}")
    return None


def display_total_funding(df):
    if 'funding_total_usd' not in df:
        print("ERROR: 'funding_total_usd' missing")
        return
    total = df['funding_total_usd'].sum()
    print(f"Total funding: ${total:,.0f}")


def display_top_funded_companies(df, n=TOP_N):
    if not {'name', 'funding_total_usd'}.issubset(df.columns):
        print("ERROR: Required columns missing")
        return
    top = df.groupby('name')['funding_total_usd'].sum().nlargest(n)
    top.sort_values().plot(kind='barh', color=sns.color_palette('viridis', n))
    plt.title(f'Top {n} Funded Companies')
    plt.xlabel('Funding (USD)')
    plt.tight_layout()
    plt.show()


def display_funding_by_country(df, n=TOP_N):
    if not {'country', 'funding_total_usd'}.issubset(df.columns):
        print("ERROR: Required columns missing")
        return
    by_country = df.groupby('country')['funding_total_usd'].sum().nlargest(n)
    by_country.sort_values().plot(kind='barh', color=sns.color_palette('magma', n))
    plt.title(f'Top {n} Countries by Funding')
    plt.xlabel('Funding (USD)')
    plt.tight_layout()
    plt.show()


def display_most_active_markets(df, n=TOP_N):
    if not {'primary_category', 'name'}.issubset(df.columns):
        print("ERROR: Required columns missing")
        return
    markets = df.groupby('primary_category')['name'].nunique().nlargest(n)
    markets.sort_values().plot(kind='barh', color=sns.color_palette('coolwarm', n))
    plt.title(f'Top {n} Active Markets')
    plt.xlabel('Unique Startups')
    plt.tight_layout()
    plt.show()


def display_funding_trends_over_years(df):
    if not {'first_funding_year', 'funding_total_usd'}.issubset(df.columns):
        print("ERROR: Required columns missing")
        return
    data = df[df['first_funding_year'] > 1980].groupby('first_funding_year')['funding_total_usd'].sum()
    data.plot(kind='line', marker='o')
    plt.title('Funding Trends Over Years')
    plt.xlabel('Year')
    plt.ylabel('Funding (USD)')
    plt.tight_layout()
    plt.show()


def display_status_distribution(df):
    if 'status' not in df:
        print("ERROR: 'status' missing")
        return
    counts = df['status'].value_counts()
    counts.plot(kind='pie', autopct='%1.1f%%')
    plt.title('Startup Status Distribution')
    plt.tight_layout()
    plt.show()


def display_funding_rounds_vs_total_funding_correlation(df):
    if not {'funding_rounds', 'funding_total_usd'}.issubset(df.columns):
        print("ERROR: Required columns missing")
        return
    df2 = df[(df['funding_rounds'] > 0) & (df['funding_total_usd'] > 0)]
    if df2.empty:
        print("No data for correlation")
        return
    corr = df2['funding_rounds'].corr(df2['funding_total_usd'])
    sns.scatterplot(data=df2, x='funding_rounds', y='funding_total_usd', alpha=0.6)
    plt.yscale('log')
    plt.title(f'Rounds vs Funding (corr={corr:.2f})')
    plt.tight_layout()
    plt.show()


def main():
    df = load_data(CLEANED_DATA_PATH)
    if df is None or df.empty:
        print("No data available")
        return
    display_total_funding(df)
    display_top_funded_companies(df)
    display_funding_by_country(df)
    display_most_active_markets(df)
    display_funding_trends_over_years(df)
    display_status_distribution(df)
    display_funding_rounds_vs_total_funding_correlation(df)


if __name__ == '__main__':
    main()